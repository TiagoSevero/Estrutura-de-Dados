#include<stdio.h>
#include <stdlib.h>

int a, b, ma, mp;

void le_notas(){
	
	scanf("%d",&a);
	scanf("%d",&b);

}

void calc_media(){

	ma = (a +  b) /2;
	
	mp = (a+(2*b))/3;
}

void exibe_dados(){

	printf("\nA = %d\n", a);
	printf("B = %d\n", b);
	printf("MÉDIA ARITMÉTICA = %d\n", ma);
	printf("MÉDIA PONDERADA = %d\n", mp);

}

int main(){

	le_notas();
		
	calc_media (a, b, ma, mp);
	
	exibe_dados (a , b , ma , mp);
	
}
